<h2>Connexion</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <p class ="signin"><%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Username" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> </p>
  </div>

  <div class="form-actions">
    <p class ="button-connexion"><%= f.button :submit, "Connexion" %> </p>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
