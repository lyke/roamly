
<div class="container">
<h2>Connexion</h2>
<div class="d-flex">
<%= image_tag "https://res.cloudinary.com/dwl5s1v4k/image/upload/v1687794058/Capture_d_%C3%A9cran_2023-06-09_%C3%A0_14.11.35_an20ka.png", height: 300, width: 300, crop: :fill, class: "logo-signin"%>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <p class ="signin"><%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Username" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> </p>
  </div>

  <div class="form-actions d-flex">
    <%= f.button :submit, "Connexion", class: "button-connexion" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
