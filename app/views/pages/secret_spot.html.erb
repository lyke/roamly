<% @my_secrets.each do |secret| %>
  <%= link_to place_path(secret), class: "travel-card" do %>
      <div class="rectangle">
          <% if secret.photos.attached? %>
            <% secret.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 350, width: 450, crop: :fill %>
              <% break %>
            <% end %>
          <% else %>
          <%= image_tag "https://res.cloudinary.com/dwl5s1v4k/image/upload/v1688474864/photo-non-disponible-1_do68va.jpg", height: 350, width: 450, crop: :fill %>
          <% end %>
          <div>
            <h2><%= secret.name %></h2>
            <% if secret.validation? %>
              <%= secret.description.first(60) ... %>
            <% else %>
              <h3 class="att-validation">En attente de validation</h3>
            <% end %>
          </div>
      </div>

  <% end %>
