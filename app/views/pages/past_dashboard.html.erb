          <%= cl_image_tag travel.places.first.photos.first.key, height: 350, width: 450, crop: :fill %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/dwl5s1v4k/image/upload/v1688474864/photo-non-disponible-1_do68va.jpg", height: 350, width: 450, crop: :fill %>
        <% end %>
        <%# <img src="https://images.partir.com/g6_T5RzFIxc2VZcftQeoyIw8sgg=/750x/filters:sharpen(0.3,0.3,true)/incontournables/italie-milan-duomo.jpg" alt="Image 1"> %>
        <%# <%= cl_image_tag travel.place.first.photo.key, height: 350, width: 450, crop: :fill %>
        <div>
          <h2><%= travel.name %></h2>
          Dates :
          <div>
            <strong><%= travel.beginning_date %></strong>  -  <strong><%= travel.ending_date %></strong>
          </div>
          Prix : <strong><%= travel.places.sum(&:price) %> â‚¬</strong>
        </div>
    </div>
  <% end %>
<% end %>
