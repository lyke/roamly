<p style="color: green"><%= notice %></p>



<h1><%= @place.name %></h1>
  <div class="d-flex justify-content-around">
    <h3 class="place-caracteristiques">Duration : <%= @place.duration %>min</h3>
    <h3 class="place-caracteristiques">Temperature : <%= @place.min_temp %> to <%= @place.max_temp %> °C</h3>
  </div>

  <div class="d-flex justify-content-around">
    <h3 class="place-caracteristiques">Price : <%= @place.price %>€</h3>
    <h3 class="place-caracteristiques">Address : <%= @place.address %></h3>
  </div>
  <p><%= @place.description %></p>


<div>
  <%= link_to "Edit this place", edit_place_path(@place) %> |
  <%= link_to "Back to places", places_path %>

  <%= button_to "Destroy this place", @place, method: :delete %>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
<% @place.photos.each_with_index do |photo, index| %>
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index == 0? 'active' : '' %>"></li>
    </ol>
    <div class="item active">
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <%= cl_image_tag photo.key, height: 500, width: 600, crop: :fill, class: "d-block w-100" %>
      </div>
  </div>
  <% end %>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
