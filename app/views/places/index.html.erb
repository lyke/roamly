<div id="places">
  <div class="index-grid places-card">
    <% @places.each do |place| %>
  <%= link_to place_path(place), class: "travel-card" do %>
      <div class="rectangle">
          <% if place.photos.attached? %>
            <% place.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 350, width: 450, crop: :fill %>
              <% break %>
            <% end %>
          <% end %>
          <div>
            <h2><%= place.name %></h2>
            <% if place.validation? %>
              <%= place.description.first(75).. %>
            <% else %>
              <h3>En attente de validation</h3>
            <% end %>
          </div>
      </div>
  <% end %>
<% end %>
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
